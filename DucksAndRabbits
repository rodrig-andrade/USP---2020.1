#include <stdio.h>

int main(){

    int pes;
    int cabecas;
    int patos;
    int coelhos;

    printf("Informe o número de pés: ");
    scanf("%i", &pes);

    printf("Informe o número de cabeças: ");
    scanf("%i", &cabecas);

    coelhos = (pes - 2*cabecas)/2;
    patos = cabecas - coelhos;

    printf("Número de coelhos: %i \n", coelhos);
    printf("Número de patos: %i \n", patos);

    return 0;
}
